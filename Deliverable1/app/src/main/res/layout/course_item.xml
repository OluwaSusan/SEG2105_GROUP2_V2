<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/Orange_Light"
    android:elevation="8dp"
    android:id="@+id/parent_layout"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/deletebtn_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@color/Orange_Light"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_delete"
                android:drawableTint="@color/Orange_Deep"/>

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_edit"
                android:drawableTint="@color/Orange_Deep"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/courseimage" />

            <Button
                android:id="@+id/openCourse_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_forwardarrow" />

        </LinearLayout>

        <TextView
            android:id="@+id/idCourseID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fontFamily="@font/muli_black"
            android:padding="3dp"
            android:text="GNG4170"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/idCourseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fontFamily="@font/muli_bold"
            android:padding="3dp"
            android:text="Engineering Law"
            android:textColor="@color/black" />

    </LinearLayout>

</androidx.cardview.widget.CardView>